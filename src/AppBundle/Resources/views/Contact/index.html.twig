{% extends 'base.html.twig' %}

{% block stylesheets %}
    {% stylesheets
    'css/bootstrap.min.css'
    'css/custom.css'
    filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    <style>
        html {
            background: #104f70 url({{ asset('bundles/app/img/section/'~backgroundFileName) }}) no-repeat center center fixed;
        }

        .contact {
            background-image: url({{ asset('bundles/app/img/section/'~moreFileName) }});
        }
    </style>
    {% endstylesheets %}
{% endblock %}

{% block title %}{{ parent() }} - kontakt{% endblock %}
{% block description %}Bezprzewodowy internet, darmowy parking, 34-511 Kościelisko, ul. Groń 20{% endblock %}

{% block body %}
    <div id="contact"></div>
    <div class="row">
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <div class="caption">
                    <h3>Bezpłatne <span>wi-fi</span></h3>
                </div>
                <img src="{{ asset('bundles/app/img/section/'~wifiFileName) }}" alt="{{ wifiFileName }}"/>
                <div class="caption">
                    <p>Dostęp do Internetu na terenie całej willi Aziza za darmo. Bezpłatny parking.</p>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <div class="caption">
                    <h3>Organizacja <span>kuligów</span></h3>
                </div>
                <img src="{{ asset('bundles/app/img/section/'~organisationFileName) }}"
                     alt="{{ organisationFileName }}"/>
                <div class="caption">
                    <p>Skutery śnieżne - wypożyczalnia, szkółka jeździecka - 300m obok</p>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <div class="caption">
                    <h3>Blisko <span>Zakopane</span></h3>
                </div>
                <img src="{{ asset('bundles/app/img/section/'~zakopaneFileName) }}" alt="{{ zakopaneFileName }}"/>
                <div class="caption last">
                    <p>Tatrzański Park Narodowy, szlaki turystyczne, ścieżki, rowerowe. 7 km do Zakopanego.</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {% javascripts
    '@AppBundle/Resources/public/js/jquery.js'
    '@AppBundle/Resources/public/js/bootstrap.js'
    '@AppBundle/Resources/public/js/react/react.js'
    '@AppBundle/Resources/public/js/react/react-dom.js'
    '@AppBundle/Resources/public/js/react/components/contact.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
