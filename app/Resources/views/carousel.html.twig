<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        {% for photo in carouselPhotos %}
            <div class="item{% if (photo.id == photo.mainPhotoId) %} active{% endif %}">
                <img src="{{ asset('bundles/app/img/section/'~photo.name) }}" alt="{{ photo.name }}" />
            </div>
        {% endfor %}
    </div>
    <!-- Controls -->
    <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
        <span class="sr-only">Previous</span>
        {% image '@AppBundle/Resources/public/img/prev.png' %}
            <img src="{{ asset_url }}" alt="Poprzedni slajd" />
        {% endimage %}
    </a>
    <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
        <span class="sr-only">Next</span>
        {% image '@AppBundle/Resources/public/img/next.png' %}
            <img src="{{ asset_url }}" alt="NastÄ™pny slajd" />
        {% endimage %}
    </a>
</div>
